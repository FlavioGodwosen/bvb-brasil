<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bvbbr.bvb_brasil"
    android:versionCode="4"
    android:versionName="4.0"
    tools:ignore="GradleOverrides">
    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:icon="@mipmap/bvbbrasilimg_round"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m"
        tools:ignore="AllowBackup">


        <!-- Splash screen -->
        <activity
            android:name="com.bvbbr.bvb_brasil.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="unspecified"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Principal -->
        <activity
            android:name="com.bvbbr.bvb_brasil.ActivityPrincipal"
            android:label="@string/app_name"
            android:screenOrientation="unspecified">
        </activity>
        <activity android:name="com.bvbbr.bvb_brasil.BotoesActivity"
                  android:screenOrientation="unspecified"/>
        <activity android:name="com.bvbbr.bvb_brasil.ChampionsLActivity"
                  android:screenOrientation="unspecified"/>
        <activity android:name="com.bvbbr.bvb_brasil.EncontroActivity"
                  android:screenOrientation="unspecified"/>
        <activity android:name="com.bvbbr.bvb_brasil.JogoSuperCupActivity"
                  android:screenOrientation="unspecified"/>
        <activity android:name="com.bvbbr.bvb_brasil.PokalActivity"
                  android:screenOrientation="unspecified"/>
        <activity android:name=".TwitterBvbBr" />
        <activity android:name=".InstagramBvbBr" />
        <activity android:name=".YoutubeBvbBr" />
        <activity android:name=".FacebookBvbBr" />
        <activity android:name=".CadastroBvbBr" />
        <activity android:name=".EnderecoBvbBr" />
    </application>
</manifest>