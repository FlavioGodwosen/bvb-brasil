
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundoprincipal"
    android:orientation="vertical">


            <ImageView
                android:id="@+id/bgImage4"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="15dp"
                android:background="#FCE501"
                android:contentDescription="@string/todo20"
                android:scaleType="centerInside"
                android:src="@drawable/bvbface" />


    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Bundesliga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/botaopaginainicialyellow"
                android:gravity="center"
                android:textColor="#050505"
                android:textColorHighlight="#FCE501"
                android:text="@string/bundesliga" />

            <Button
                android:id="@+id/ChampionsL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/botaopaginainicialyellow"
                android:gravity="center"
                android:textColor="#050505"
                android:textColorHighlight="#FCE501"
                android:textColorLink="#00F3E709"
                android:text="@string/champions_league" />

            <Button
                android:id="@+id/SuperCopa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/botaopaginainicialyellow"
                android:gravity="center"
                android:textColor="#050505"
                android:textColorHighlight="#FCE501"
                android:textColorLink="#00F3E709"
                android:text="@string/super_copa"/>

            <Button
                android:id="@+id/Pokal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/botaopaginainicialyellow"
                android:gravity="center"
                android:textColor="#050505"
                android:textColorHighlight="#FCE501"
                android:textColorLink="#00F3E709"
                android:text="@string/pokal"/>

            <Button
                android:id="@+id/Encontros"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/botaopaginainicialyellow"
                android:gravity="center"
                android:text="@string/redes_cadsatro"
                android:textColor="#050505"
                android:textColorHighlight="#FCE501"
                android:textColorLink="#00F3E709" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>

